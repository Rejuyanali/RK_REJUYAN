// Prisma schema for file hosting platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum FileVisibility {
  PUBLIC
  PRIVATE
  UNLISTED
}

enum PayoutStatus {
  PENDING
  APPROVED
  PAID
  REJECTED
}

enum ReportStatus {
  PENDING
  REVIEWED
  ACTIONED
  DISMISSED
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique
  email         String    @unique
  passwordHash  String?
  role          UserRole  @default(USER)
  premiumUntil  DateTime?
  apiKey        String?   @unique
  googleId      String?   @unique

  // Stats
  totalUploads  Int       @default(0)
  totalDownloads Int      @default(0)
  totalBandwidth BigInt   @default(0)

  // Settings
  isActive      Boolean   @default(true)
  isBanned      Boolean   @default(false)
  banReason     String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  files         File[]
  payouts       Payout[]
  sessions      Session[]

  @@index([email])
  @@index([username])
  @@index([apiKey])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model File {
  id            String         @id @default(uuid())
  userId        String?
  publicId      String         @unique
  originalName  String
  s3Key         String         @unique
  s3Bucket      String
  size          BigInt
  mimeType      String

  // Metadata
  description   String?
  password      String?
  visibility    FileVisibility @default(PUBLIC)

  // Stats
  downloadsCount Int           @default(0)
  viewsCount     Int           @default(0)

  // Thumbnails
  thumbnailS3Key String?

  // Expiry
  expiresAt     DateTime?

  // Flags
  isVirused     Boolean        @default(false)
  isBanned      Boolean        @default(false)
  isProcessed   Boolean        @default(false)

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // Relations
  user          User?          @relation(fields: [userId], references: [id], onDelete: SetNull)
  downloads     Download[]
  reports       Report[]

  @@index([publicId])
  @@index([userId])
  @@index([createdAt])
  @@index([expiresAt])
}

model Download {
  id          String   @id @default(uuid())
  fileId      String
  ip          String
  userAgent   String?
  bytes       BigInt
  isComplete  Boolean  @default(false)
  isPaid      Boolean  @default(false)
  country     String?
  createdAt   DateTime @default(now())

  file        File     @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([fileId])
  @@index([ip])
  @@index([createdAt])
}

model Payout {
  id          String        @id @default(uuid())
  userId      String
  amountCents Int
  status      PayoutStatus  @default(PENDING)

  // Payment details
  paymentMethod String?
  paymentEmail  String?
  paymentAddress String?

  requestedAt DateTime      @default(now())
  reviewedAt  DateTime?
  paidAt      DateTime?

  notes       String?

  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model Report {
  id          String        @id @default(uuid())
  fileId      String
  reporterIp  String
  reporterEmail String?
  reason      String
  description String?
  status      ReportStatus  @default(PENDING)

  reviewedBy  String?
  reviewNotes String?

  createdAt   DateTime      @default(now())
  reviewedAt  DateTime?

  file        File          @relation(fields: [fileId], references: [id], onDelete: Cascade)

  @@index([fileId])
  @@index([status])
}

model Setting {
  id    String @id @default(uuid())
  key   String @unique
  value String

  updatedAt DateTime @updatedAt

  @@index([key])
}

model BannedIp {
  id        String   @id @default(uuid())
  ip        String   @unique
  reason    String?
  createdAt DateTime @default(now())
  expiresAt DateTime?

  @@index([ip])
}

model ApiLog {
  id         String   @id @default(uuid())
  method     String
  path       String
  statusCode Int
  ip         String
  userAgent  String?
  userId     String?
  duration   Int
  createdAt  DateTime @default(now())

  @@index([createdAt])
  @@index([userId])
  @@index([ip])
}
