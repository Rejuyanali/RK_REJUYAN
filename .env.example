# Database
DATABASE_URL="postgresql://filehost:password@localhost:5432/filehost?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="30d"

# S3 / Object Storage
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_BUCKET="filehost"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_USE_SSL=false
S3_PUBLIC_URL="http://localhost:9000/filehost"

# Application
NODE_ENV="development"
PORT=3001
CLIENT_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# File Upload Limits
MAX_FILE_SIZE_FREE=104857600
MAX_FILE_SIZE_PREMIUM=5368709120
FREE_USER_WAIT_SECONDS=9
ALLOWED_MIME_TYPES="image/*,video/*,audio/*,application/pdf,application/zip,application/x-rar-compressed"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
DOWNLOAD_RATE_LIMIT_PER_IP=10

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3001/api/v1/auth/oauth/google/callback"

# Stripe (optional)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PREMIUM_PRICE_ID=""

# PayPal (optional)
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_MODE="sandbox"

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=""
TELEGRAM_WEBHOOK_URL=""

# Virus Scanning (optional)
CLAMAV_HOST="localhost"
CLAMAV_PORT=3310
ENABLE_VIRUS_SCAN=false

# Admin
ADMIN_EMAIL="admin@filehost.local"
ADMIN_PASSWORD="admin123"

# Monetization
MIN_PAYOUT_THRESHOLD_CENTS=5000
EARNINGS_PER_DOWNLOAD_CENTS=10
DOWNLOAD_COMPLETION_THRESHOLD=0.8

# Email (optional - for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@filehost.local"
